                     [0,-1]])
def transfer_matrix(T,B):
    beta=1/(kB*T)
    return np.array([[np.exp(beta*J+beta*B), np.exp(-beta*J)],
                     [np.exp(-beta*J), np.exp(beta*J-beta*B)]])

